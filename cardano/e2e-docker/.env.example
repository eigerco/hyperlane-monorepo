# Cardano <-> Fuji E2E Testing Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LOGGING
# =============================================================================
RUST_LOG=info

# =============================================================================
# AWS S3 CHECKPOINT STORAGE
# =============================================================================
# S3 bucket for validator checkpoint signatures
# See: https://docs.hyperlane.xyz/docs/operate/validators/validator-signatures-aws
AWS_ACCESS_KEY_ID=<your-aws-access-key-id>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-access-key>
AWS_REGION=eu-north-1
AWS_S3_BUCKET=<your-s3-bucket-name>

# =============================================================================
# CARDANO VALIDATOR CONFIGURATION
# =============================================================================
# ECDSA secp256k1 private key for signing Cardano checkpoints (hex with 0x prefix)
CARDANO_VALIDATOR_KEY=0x<your-validator-private-key>

# =============================================================================
# CARDANO SIGNER (for Fuji -> Cardano relay)
# =============================================================================
# Ed25519 private key for signing Cardano transactions (hex with 0x prefix)
# This key's address must have ADA to pay for transaction fees
CARDANO_SIGNER_KEY=0x<your-cardano-signer-private-key>

# =============================================================================
# BLOCKFROST API
# =============================================================================
# Get your API key from https://blockfrost.io
BLOCKFROST_API_KEY=<your-blockfrost-api-key>

# =============================================================================
# CARDANO CONTRACT ADDRESSES
# =============================================================================
# These are in H256 format with 0x00000000 prefix for 28-byte policy IDs
# Format: 0x00000000<28-byte-policy-id-hex>

CARDANO_MAILBOX=0x00000000<mailbox-policy-id>
CARDANO_VALIDATOR_ANNOUNCE=0x00000000<validator-announce-policy-id>
CARDANO_MERKLE_TREE_HOOK=0x00000000<merkle-tree-hook-policy-id>
CARDANO_ISM=0x00000000<ism-policy-id>

# =============================================================================
# CARDANO POLICY IDs AND SCRIPT HASHES
# =============================================================================
# Raw 28-byte hex values (no prefix)

CARDANO_MAILBOX_POLICY_ID=<mailbox-policy-id>
CARDANO_MAILBOX_SCRIPT_HASH=<mailbox-script-hash>
CARDANO_MAILBOX_REF_UTXO=<tx-hash>#<output-index>
CARDANO_PROCESSED_MSG_POLICY_ID=<processed-messages-nft-policy-id>
CARDANO_REGISTRY_POLICY_ID=<registry-policy-id>
CARDANO_ISM_POLICY_ID=<ism-policy-id>
CARDANO_ISM_REF_UTXO=<ism-ref-tx-hash>#<output-index>
CARDANO_VA_POLICY_ID=<validator-announce-policy-id>

# Indexing start block (set to a recent block to speed up sync)
CARDANO_INDEX_FROM=0

# =============================================================================
# FUJI (AVALANCHE TESTNET) CONFIGURATION
# =============================================================================

FUJI_MAILBOX=0x5b6CFf85442B851A8e6eaBd2A4E4507B5135B3B0
FUJI_VALIDATOR_ANNOUNCE=0x4f7179A691F8a684f56cF7Fed65171877d30739a
FUJI_MERKLE_TREE_HOOK=0x9ff6ac3dAf63103620BBf76136eA1AFf43c2F612
FUJI_IGP=0x6895d3916B94b386fAA6ec9276756e16dAe7480E
FUJI_ISM=0xD44036F1917bb13cB36a4ab1ad0F87324aacF1EB

FUJI_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc

# Private key for signing Fuji transactions (hex with 0x prefix)
# WARNING: This key will have AVAX deducted for gas fees!
FUJI_SIGNER_KEY=0x<your-fuji-signer-private-key>

# Indexing start block
FUJI_INDEX_FROM=48764210
