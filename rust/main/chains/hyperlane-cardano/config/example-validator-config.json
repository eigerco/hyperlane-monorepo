{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "_comment": "Example validator config for Cardano Preprod",

  "originChainName": "cardanopreprod",

  "validator": {
    "type": "hexKey",
    "key": "${VALIDATOR_PRIVATE_KEY}"
  },

  "checkpointSyncer": {
    "type": "localStorage",
    "path": "/tmp/hyperlane-cardano-validator"
  },

  "reorgPeriod": 20,
  "interval": 30,

  "chains": {
    "cardanopreprod": {
      "name": "cardanopreprod",
      "domainId": 2002,
      "protocol": "cardano",
      "chainId": 2002,
      "connection": {
        "type": "blockfrost",
        "url": "https://cardano-preprod.blockfrost.io/api/v0",
        "apiKey": "${BLOCKFROST_API_KEY_PREPROD}"
      },
      "addresses": {
        "mailbox": "REPLACE_WITH_MAILBOX_POLICY_ID",
        "interchainSecurityModule": "REPLACE_WITH_ISM_POLICY_ID"
      },
      "index": {
        "from": 0,
        "chunk": 100
      }
    }
  },

  "metrics": {
    "port": 9091
  }
}
