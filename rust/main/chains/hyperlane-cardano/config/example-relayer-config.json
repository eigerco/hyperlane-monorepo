{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "_comment": "Example relayer config for Cardano Preprod <-> Sepolia testing",

  "chains": {
    "cardanopreprod": {
      "name": "cardanopreprod",
      "domainId": 2002,
      "protocol": "cardano",
      "chainId": 2002,
      "connection": {
        "type": "blockfrost",
        "url": "https://cardano-preprod.blockfrost.io/api/v0",
        "apiKey": "${BLOCKFROST_API_KEY_PREPROD}"
      },
      "addresses": {
        "mailbox": "REPLACE_WITH_MAILBOX_POLICY_ID",
        "interchainGasPaymaster": "REPLACE_WITH_IGP_POLICY_ID",
        "validatorAnnounce": "REPLACE_WITH_VA_POLICY_ID",
        "interchainSecurityModule": "REPLACE_WITH_ISM_POLICY_ID"
      },
      "index": {
        "from": 0,
        "chunk": 100
      }
    },
    "sepolia": {
      "name": "sepolia",
      "domainId": 11155111,
      "protocol": "ethereum",
      "chainId": 11155111,
      "rpcUrls": [
        {
          "http": "${SEPOLIA_RPC_URL}"
        }
      ],
      "addresses": {
        "mailbox": "REPLACE_WITH_SEPOLIA_MAILBOX",
        "interchainGasPaymaster": "REPLACE_WITH_SEPOLIA_IGP",
        "validatorAnnounce": "REPLACE_WITH_SEPOLIA_VA",
        "interchainSecurityModule": "REPLACE_WITH_SEPOLIA_ISM"
      },
      "index": {
        "from": 0,
        "chunk": 1000
      }
    }
  },

  "relayChains": ["cardanopreprod", "sepolia"],

  "gasPaymentEnforcement": [
    {
      "type": "none",
      "_comment": "Disable gas payment enforcement for testing"
    }
  ],

  "whitelist": [],
  "blacklist": [],

  "allowLocalCheckpointSyncers": true,

  "defaultSigner": {
    "type": "hexKey",
    "key": "${RELAYER_PRIVATE_KEY}"
  },

  "metrics": {
    "port": 9090
  }
}
